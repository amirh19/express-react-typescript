{
  "extends": "@tsconfig/node12/tsconfig.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist/",
    "skipLibCheck": true,
    "lib": ["DOM"],
    "strictPropertyInitialization": false
  },
  "exclude": ["./src/server "],
  "include": ["./src/client/*", "./src/client/types/**/*.d.ts"]
}
